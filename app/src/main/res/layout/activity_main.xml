<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9F6CA"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="CONVERSIÓN DE MONEDAS"
        android:textSize="25dp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Precio del BTC"
        android:textSize="15dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/EditBTC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1E0810"
        android:backgroundTint="#CFF4F4"
        android:ems="10"
        android:hint="BTC"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Moneda de destino"
        android:textSize="15dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditBTC" />

    <Spinner
        android:id="@+id/ListaConver"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="#CFF4F4"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="2dp" />

    <Button
        android:id="@+id/btnConversion"
        android:layout_width="167dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#006064"
        android:backgroundTintMode="add"
        android:drawableRight="@drawable/bitcoin"
        android:padding="10dp"
        android:text="Conversión"
        app:layout_constraintTop_toBottomOf="@+id/ListaConver"
        tools:layout_editor_absoluteX="153dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:padding="10dp"
        android:text="Resultado"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/btnConversion"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/txMostrar"
        android:layout_width="216dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="112dp"
        android:text="Conversión"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/btnConversion" />

</androidx.constraintlayout.widget.ConstraintLayout>